#The purpose of this code is for the nurse to be able to obtain location information 
#when and API call is made.

#import modules
import json
import boto3
from boto3.dynamodb.conditions import Key
import datetime

dynamodb = boto3.resource('dynamodb')
table = dynamodb.Table('HX_LOC')

def lambda_handler(event, context):
        print("Start Request for Get Location")
        response = table.query(
        KeyConditionExpression=Key('ID').eq(event['rawQueryString']))
        body=(response['Items'][-1])
        ts=body['ts']
        time = ((datetime.datetime.fromtimestamp(ts/1000))) #need to fix time
        time = time.strftime("%m/%d/%Y, %H:%M:%S")
        
        #formatting for time 
        time = (((time.split(',')[1])))
        h =int( time.split(":")[0]) - 5
        t = str(h)
        for temp in time.split(':')[1:]:
                t = t+':' + temp
        time=t
        
        data={}
        user_loc={}
        data['Time']=time
        user_loc["items"]=({**body,**data})
        return(user_loc)
